<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.fragments.PostAddFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/post_add_logo_card"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_above="@id/post_add_app_name"
        app:cardCornerRadius="@dimen/default_margin"
        android:layout_centerHorizontal="true"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/post_add_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_above="@id/post_text_add_layout"
        android:layout_margin="@dimen/default_margin"
        android:textSize="32sp"
        android:textAlignment="center"
        app:fontFamily="@font/roboto"
        />

    <LinearLayout
        android:id="@+id/post_text_add_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/default_margin"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/post_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_text_post"
                android:textSize="24sp"
                android:letterSpacing="0.2"
                android:layout_margin="@dimen/default_margin"
                app:cornerRadius="16dp"
                android:drawableStart="@drawable/baseline_text_fields_24"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/default_margin"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/post_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_image_post"
                android:textSize="24sp"
                android:letterSpacing="0.2"
                android:layout_margin="@dimen/default_margin"
                android:drawableStart="@drawable/baseline_image_24"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/default_margin"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/post_add_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_video_post"
                android:textSize="24sp"
                android:letterSpacing="0.2"
                android:layout_margin="@dimen/default_margin"
                app:cornerRadius="16dp"
                android:drawableStart="@drawable/baseline_video_library_24"
                />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>